# Exchange API Configuration
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to git!

# Exchange Selection
# Options: binance, binanceth, binance_testnet, okx, bybit
EXCHANGE=binance

# สำหรับ Binance Thailand
# Website: https://www.binance.th/th/trade/BTC_USDT
# API Management: https://www.binance.th/th/my/settings/api-management
# EXCHANGE=binanceth

# สำหรับ Binance Testnet (ทดสอบฟรี ไม่ใช้เงินจริง)
# ⚠️ ต้องไปที่ testnet.binance.vision ไม่ใช่ demo.binance.com
# Website: https://testnet.binance.vision/
# EXCHANGE=binance_testnet
# USE_TESTNET=true

# API Keys (Get from your exchange)
# Binance Global: https://www.binance.com/en/my/settings/api-management
# Binance TH: https://www.binance.th/th/my/settings/api-management
# Binance Testnet: https://testnet.binance.vision/
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Line Notify (Optional - for notifications)
LINE_NOTIFY_TOKEN=your_line_notify_token_here

# Trading Configuration
DRY_RUN=true  # Set to false for real trading
USE_TESTNET=false  # Set to true for Binance Testnet
